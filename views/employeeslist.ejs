<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    <title>Document</title>
</head>

<body>
    <div class="wrapper">
        <header>
            <nav>
                <a href="/addnew">Add New Employee</a>
                <a href="/contact">Contact Us</a>
            </nav>
        </header>
        <main>
            <div class="view-heading">
                <h1>View Employees Page</h1>
            </div>
            <div class="card-list">
                <% if(responseArray.length> 0 ){ %>
                    <% responseArray.map((results)=> { %>
                        <div class="employee-card">
                            <div class="box">
                                <div class="box-top">
                                    <img class="box-image" src="" alt="Girl Eating Pizza">
                                    <div class="title-flex">
                                        <h4 class="employee-name">
                                            <%= results.name %>
                                                <%= results.surname %>
                                        </h4>
                                        <p class="employee-position">
                                            <%= results.emailAddress %>
                                        </p>
                                        <p class="employee-position">
                                            <%= results.employeePosition %>
                                        </p>
                                        <p class="employee-position">
                                            <%= results.phoneNumber %>
                                        </p>

                                    </div>
                                </div>
                                <div>
                                    <a href="#" class="button"
                                        onclick="handleEdit(<%= JSON.stringify(results) %>)">Edit</a>
                                    <a href="#" class="button" onclick="handleDelete(<%= JSON.stringify(results) %>)"
                                        data-doc=<%=results.id %>>Delete</a>
                                </div>
                            </div>
                        </div>
                        <div id="popup-form">
                            <div class="form-container">
                                <form id="update-form" class="w-50">
                                    <h4 class="update-heading">Update Employee</h4>
                                    <label class="form-label">Name</label><br />
                                    <input type="text" id="name" name="name" class="form-control" required /><br />
                                    <label class="form-label">Surname</label><br />
                                    <input type="text" id="surname" name="surname" class="form-control" required /><br />
                                    <label class="form-label">ID No.</label><br />
                                    <input type="number" id="idNumber" class="form-control" name="idNumber" required /><br />
                                    <label class="form-label">Email Address</label><br />
                                    <input type="email" id="emailAddress" name="emailAddress" class="form-control" required /><br />
                                    <label class="form-label"></label>Employee Position</label><br />
                                    <input type="text" id="employeePosition" name="employeePosition" class="form-control"
                                        required /><br />
                                    <label>Phone number</label><br />
                                    <input type="number" id="phoneNumber" name="phoneNumber" class="form-control" required /><br />
                                    <label>Image</label><br />
                                    <input type="file" id="file" name="file" /><br />
                                    <div class="update-btns">
                                        <button class="btn btn-primary" type="submit" onclick="handleUpdate(<%= JSON.stringify(results) %>)">Update</button>
                                        <button class="btn btn-danger"onclick="handleDelete(<%= JSON.stringify(results) %>)"
                                            data-doc=<%=results.id %>>Delete</button>
                                        <button class="btn btn-dark" onclick="hidePopup()">Close</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                <%}else {%>
                    <h2>No employees added</h2>
                <% } %>
            </div>
           
        </main>
        <footer>
        </footer>
    </div>

    <script>

        // Handles the edit function
        function handleEdit(results) {
            document.getElementById('popup-form').style.display = 'flex';

            document.getElementById('name').value = results.name;
            document.getElementById('surname').value = results.surname;
            document.getElementById('idNumber').value = results.idNumber;
            document.getElementById('emailAddress').value = results.emailAddress;
            document.getElementById('employeePosition').value = results.employeePosition;
            document.getElementById('phoneNumber').value = results.phoneNumber
        }


        // Handles the update function
        function handleUpdate(res) {

            document.getElementById('update-form').addEventListener('submit', () => {

                const name = document.getElementById('name').value
                const surname = document.getElementById('surname').value
                const idNumber = document.getElementById('idNumber').value
                const emailAddress = document.getElementById('emailAddress').value
                const employeePosition = document.getElementById('employeePosition').value
                const phoneNumber = document.getElementById('phoneNumber').value
                const image = document.getElementById('file').value

                const data = { name, surname, idNumber, emailAddress, employeePosition, phoneNumber }

                const endpoint = `update/${res.id}`;
                fetch(endpoint, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                }).then(response => response.json()).then((data) => {
                    console.log("Employee Updated", data)
                }).catch((error) => {
                    console.log(error)
                })

                console.log(res.id)
            })
        }

        
        // Handles the delete function
        function handleDelete(results) {
            console.log(results)

            const endpoint = `delete/${results.id}`;
            fetch(endpoint, {
                method: 'DELETE'
            }).then(() => {
                console.log('DELETED')
            }).catch((error) => {
                console.log(error)
            })
        }


        // Hides the popup
        function hidePopup() {
            document.getElementById('popup-form').style.display = "none"
        }

        const form = document.querySelector('form')
        const submitBtn = document.querySelector('#postButton')
    </script>
</body>

</html>